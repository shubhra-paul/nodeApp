pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Git') {
      steps {
          echo "Cloning stage"
        git 'https://github.com/shubhra-paul/nodeApp.git'
      }
    }
     
    stage('Build') {
      steps {
          echo "npm install stage"
        sh 'npm install'
        echo "creating build"
         sh 'npm export'
         echo "finished"
      }
    }  
    
    
  }
}