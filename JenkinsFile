pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Git') {
      steps {
          echo "Cloning stage"
        git 'https://github.com/shubhra-paul/nodeApp.git'
      }
    }
     
    stage('Install') {
      steps {
          echo "npm install stage"
        sh 'npm install'
      }
    }

    //   stage('Run') {
    //   steps {
    //       echo "Running the app"
    //       sh 'npm run dev'
    //   }
    // }
    stage('Build') {
      steps {
          echo "Running the build"
          sh 'npm run build'
      }
    }

    stage('export') {
      steps {
          echo "Running the build"
          sh 'next export'
      }
    }
    
    
    
  }
}