pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Git') {
      steps {
          echo "Cloning stage"
        git 'https://github.com/shubhra-paul/nodeApp.git'
      }
    }
     
    stage('Install') {
      steps {
          echo "npm install stage"
        sh 'npm install'
      }
    }

  
    stage('Build') {
      steps {
          echo "Running the build"
          sh 'npm run build'
      }
    }

   
    
    
    
  }
}